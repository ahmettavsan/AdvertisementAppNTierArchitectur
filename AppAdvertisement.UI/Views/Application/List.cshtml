@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="text-end my-3 p-1">
        <a asp-action="Create" asp-controller="Application">Yeni İlan</a>
    </div>
    @if (Model?.Count > 0)
    {
        <table class="mt-3 table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>İş</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Güncel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.CreatedDate.ToString("dddd,dd MMMM yyyy")</td>
                        <td>@(item.Status ? "Aktif" : "Pasif")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Application" asp-route-id="@item.Id">Güncelle</a>|
                            <a asp-action="Delete" asp-controller="Application" asp-route-id="@item.Id">Sil</a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
         <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application">Yeni İlan</a>

         </div>
        <div class="text-end my-3 p-1">
                Herhangi bir İlan Bulunmamaktadır...

        </div>
    }

</div>
