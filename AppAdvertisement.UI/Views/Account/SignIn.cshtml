@model AppUserLoginDto
@{
    Layout = "_Layout";
}
<div class="mt-4">
    <form asp-action="SignIn" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>Username:</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Password:</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="@Model.RememberMe">
            <label class="form-check-label" for="flexCheckDefault">
                Remember Me
            </label>
        </div>
        <div class="text-danger " asp-validation-summary="All">
        </div>

        <div class="mb-3 text-lg-end">
            <button class="btn btn-primary" type="submit">Giriş Yap</button>
        </div>
    </form>
</div>
